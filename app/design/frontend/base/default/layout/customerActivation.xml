<?xml version="1.0"?>
<layout version="0.1.0">
    <customer_account_login>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="customer_form_login">
            <action method="setTemplate">
                <template>customerActivation/customerActivation.phtml</template>
            </action>
        </reference>
    </customer_account_login>
